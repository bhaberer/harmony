%h1= t('.title')
%p= link_to t('.new_account'), new_account_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for account in @accounts
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), account
        %td.action= link_to t('edit'), edit_account_path(account)
        %td.action= link_to t('destroy'), account, :confirm => t('are_you_sure'), :method => :delete
