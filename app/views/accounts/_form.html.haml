.form
  %h3 Account Settings 
  = form_for(@account) do |f|
    - if @account.errors.any?
      #errorExplanation
        %h2= "#{pluralize(@account.errors.count, 'error')} prohibited this user from being saved:"
        %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg
    .label= f.label :name
    .field= f.text_field :name
    .checkbox
      = f.check_box :todo_list_on
      = f.label :todo_list_on
    .checkbox
      = f.check_box :notes_on
      = f.label :notes_on
    .checkbox
      = f.check_box :public
      = f.label :public
    = f.submit :class => :button
  %br.clear
