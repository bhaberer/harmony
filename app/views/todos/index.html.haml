%h1= t('.title')
%p= link_to t('.new_todo'), new_todo_path

%table
  %thead
    %tr
      %th= Todo.human_attribute_name :user_id
      %th= Todo.human_attribute_name :account_id
      %th= Todo.human_attribute_name :completed
      %th= Todo.human_attribute_name :task
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for todo in @todos
      %tr{ :class => cycle(:odd, :even) }
        %td= todo.user_id
        %td= todo.account_id
        %td= todo.completed
        %td= todo.task
        %td.action= link_to t('show'), todo
        %td.action= link_to t('edit'), edit_todo_path(todo)
        %td.action= link_to t('destroy'), todo, :confirm => t('are_you_sure'), :method => :delete
