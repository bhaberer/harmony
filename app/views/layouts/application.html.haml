!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = @page_title || 'Harmony'
    = stylesheet_link_tag 'harmony'
    = javascript_include_tag 'jquery', 'jquery-ui', 'jrails', 'application', 'rails'
    = csrf_meta_tag 
  %body
    .nav
      - if user_signed_in?
        .user
          Signed in as #{current_user.profile.name}  
          |  
          #{ link_to "Edit Profile", '/profile/edit' } 
          |
          #{ link_to "Sign Out", destroy_user_session_path } 
      - else 
        .user
          You are not logged in, #{link_to "Login", new_user_session_path} 
          or #{link_to "Sign Up", new_user_registration_path}
      .notifications
        .notice= notice 
        .alert= alert
      .acc     
        - if @account.present?
          = link_to 'Account Settings', edit_account_path(@account) 

    .main= yield
