%h1= t('.title')
%p= link_to t('.new_profile'), new_profile_path

%table
  %thead
    %tr
      %th= Profile.human_attribute_name :name
      %th= Profile.human_attribute_name :user_id
      %th= Profile.human_attribute_name :twitter
      %th= Profile.human_attribute_name :phone
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for profile in @profiles
      %tr{ :class => cycle(:odd, :even) }
        %td= profile.name
        %td= profile.user_id
        %td= profile.twitter
        %td= profile.phone
        %td.action= link_to t('show'), profile
        %td.action= link_to t('edit'), edit_profile_path(profile)
        %td.action= link_to t('destroy'), profile, :confirm => t('are_you_sure'), :method => :delete
