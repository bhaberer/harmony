.form
  = form_for @item, :url => list_items_path(@list) do |f|
    - if @item.errors.any?
      #errorExplanation
        %h2= "#{pluralize(@item.errors.count, 'error')} prohibited this user from being saved:"
        %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
    .label= f.label :content, 'Item?'
    .field= f.text_field :content
    = f.submit :class => :button
  %br.clear
