  - if @item.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@item.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @item.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :content
    %br
    = f.text_field :content
  .field
    = f.label :list_id
    %br
    = f.text_field :list_id

  .actions
    = f.submit
