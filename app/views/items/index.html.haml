%h1= t('.title')
%p= link_to t('.new_item'), new_item_path

%table
  %thead
    %tr
      %th= Item.human_attribute_name :content
      %th= Item.human_attribute_name :list_id
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for item in @items
      %tr{ :class => cycle(:odd, :even) }
        %td= item.content
        %td= item.list_id
        %td.action= link_to t('show'), item
        %td.action= link_to t('edit'), edit_item_path(item)
        %td.action= link_to t('destroy'), item, :confirm => t('are_you_sure'), :method => :delete
